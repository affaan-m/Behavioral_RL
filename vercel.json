{
    "version": 2,
    "builds": [
        {
            "src": "src/web_igt.py",
            "use": "@vercel/python",
            "config": {
                "runtime": "python3.9",
                "maxLambdaSize": "15mb"
            }
        }
    ],
    "routes": [
        {
            "src": "/static/(.*)",
            "dest": "/static/$1"
        },
        {
            "src": "/(.*)",
            "dest": "src/web_igt.py"
        }
    ],
    "env": {
        "APP_MODULE": "src.web_igt:app"
    }
} 